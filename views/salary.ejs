    <body>
        <h4> Total de la muestra analizada y salario medio</h4>
        <table id="customers">
            <tr>
              <th>Muestra total</th>
              <th>Salario medio</th>
            </tr>
            <tr>
              <td><%= text2 %></td>
              <td><%= text5 %></td>
